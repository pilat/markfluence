{
  "name": "markfluence",
  "version": "0.1.1",
  "description": "The best Markdown to Confluence converter. Modern, fast, correct.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "markfluence": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "prepublishOnly": "npm run check && npm run build"
  },
  "keywords": [
    "markdown",
    "confluence",
    "atlassian",
    "converter",
    "documentation"
  ],
  "author": "Vladimir Urushev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pilat/markfluence"
  },
  "homepage": "https://github.com/pilat/markfluence",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@mermaid-js/layout-elk": "^0.2.0",
    "@resvg/resvg-js": "^2.6.2",
    "commander": "^12.1.0",
    "isomorphic-mermaid": "^0.1.1",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-frontmatter": "^2.0.1",
    "mdast-util-gfm": "^3.0.0",
    "micromark-extension-frontmatter": "^2.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
